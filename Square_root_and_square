#include <stdio.h>
#include <math.h>
using namespace std;
//This program displays the square root and the square of a number entered from the keyboard
int main()
{
    float x;
    printf("Write number: ");scanf("%.2f",&x);
    printf("The square root of %.2f is %.2f\n",x,sqrt(x));
    //if you want to show the result without decimals use %.0f;
    printf("The square of %.2f is %.2lf",x,x*x);
    return 0;
}
